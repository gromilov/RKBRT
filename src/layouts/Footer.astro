</footer>

<style lang="scss" is:global>
  .footer {
    width: 100%;
    background: white;
    border-top: 1px solid $color-border;
    padding-top: 40px;

    &__container {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      gap: 40px;
      padding-bottom: 40px;
      max-width: 1424px;
      margin: 0 auto;
      padding: 0 16px;
    }

    &__column {
      display: flex;
      flex-direction: column;
    }

    &__title {
      
      font-size: $font-size-xs;
      color: $color-primary;
      font-weight: 600;
      margin-bottom: 16px;

      &--spacing {
        margin-top: 32px;
      }
    }

    &__nav {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    &__link {
      
      font-size: $font-size-md;
      color: $color-text-primary;
      text-decoration: none;
      transition: color 0.2s ease;

      &:hover {
        color: $color-primary;
      }
    }

    &__contacts {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    &__phone {
      
      font-size: $font-size-md;
      color: $color-text-primary;
      font-weight: 500;
      text-decoration: none;
      transition: color 0.2s ease;

      &:hover {
        color: $color-primary;
      }
    }

    &__email {
      
      font-size: $font-size-md;
      color: $color-text-primary;
      text-decoration: none;
      transition: color 0.2s ease;

      &:hover {
        color: $color-primary;
      }
    }

    &__schedule {
      
      font-size: $font-size-xs;
      color: $color-text-secondary;
    }

    &__social {
      display: flex;
      gap: 16px;
    }

    .social-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 56px;
      height: 56px;
      border-radius: 50%;
      transition: transform 0.2s ease;

      &:hover {
        transform: scale(1.05);
      }

      svg {
        width: 100%;
        height: 100%;
      }
    }

    &__bottom {
      border-top: 1px solid rgba(15, 23, 42, 0.12);
      padding: 20px 0;
    }

    &__bottom-container {
      max-width: 1424px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 0 auto;
    }

    &__copyright {
      
      font-size: $font-size-xs;
      color: $color-text-secondary;
    }

    &__ministries {
      display: flex;
      text-align: left;
      gap: 40px;
    }

    &__ministry {
      display: flex;
      gap: 12px;
      align-items: center;
      justify-content: center;
      
      font-size: $font-size-xs;
      color: $color-text-primary;
      text-align: left;
      line-height: 1.4;
    }
  }

@media (max-width: $breakpoint-xl) {
  .footer__container {
    grid-template-columns: 1fr 1fr;
    gap: 32px;
  }
}

@media (max-width: $breakpoint-md) {
  .footer__container {
    grid-template-columns: 1fr;
    gap: 24px;
  }

  .footer__bottom-container {
    flex-direction: column;
    gap: 16px;
    text-align: center;
  }

  .footer__ministries {
    flex-direction: column;
    gap: 16px;
  }

  .footer__ministry {
    text-align: center;
  }
}

@media (max-width: $breakpoint-sm) {
  .footer {
    padding-top: 24px;
  }

  .footer__container {
    gap: 20px;
  }

  .footer__title {
    margin-bottom: 12px;
  }

  .footer__title--spacing {
    margin-top: 24px;
  }

  .footer__nav {
    gap: 8px;
  }
}
</style>