<style lang="scss" is:global>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  color: $color-text-primary;
  line-height: 1.6;
 
  font-family: $font-family-primary;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.news-button {
  display: flex;
  align-items: center;
  gap: 8px;
  background: white;
  border: 1px solid rgba(15, 23, 42, 0.12);
  border-radius: 28px;
  padding: 16px 32px;
  font-size: 16px;
  color: #010101;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  &:hover {
    background: #f8fafc;
    
  }
}

/* Базовые настройки типографики */
h1 {
  font-size: 48px;
  font-weight: bold;
  letter-spacing: -0.01em;
  line-height: 1.2;
  margin: 0 0 32px 0;
}

h2 {
  font-size: 32px;
  font-weight: bold;
  letter-spacing: -0.01em;
  line-height: 1.3;
  margin: 0 0 24px 0;
}

h3 {
  font-size: 28px;
  font-weight: bold;
  letter-spacing: -0.01em;
  line-height: 1.3;
  margin: 0 0 20px 0;
}

h4 {
  font-size: 24px;
  font-weight: 600;
  letter-spacing: -0.005em;
  line-height: 1.4;
  margin: 0 0 16px 0;
}

h5 {
  font-size: 20px;
  font-weight: 600;
  letter-spacing: -0.005em;
  line-height: 1.4;
  margin: 0 0 12px 0;
}

h6 {
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 0;
  line-height: 1.5;
  margin: 0 0 12px 0;
}

p {
  font-size: 16px;
  line-height: 1.6;
  margin: 0 0 24px 0;
}

a {
  color: $color-primary;
}

strong {
  font-weight: 600;
}

.text-lead {
  font-size: 20px;
  line-height: 1.5;
  margin: 0 0 24px 0;
}

.text-small {
  font-size: 14px;
  line-height: 1.5;
  margin: 0 0 12px 0;
}

</style>


