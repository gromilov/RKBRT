---
// src/components/EmployeeProfile.astro

interface EmployeeProfile {
  id: string;
  name: string;
  position: string;
  department: string;
  role?: string;
  education?: string[];
  experience?: string[];
  photo?: string;
}

interface Props {
  employee: EmployeeProfile;
}

const { employee } = Astro.props;
---

<section class="employee-profile">
  <div class="employee-profile__card">
    <div class="employee-profile__photo">
        {employee.photo ? (
          <img 
            src={employee.photo} 
            alt={employee.name}
            loading="lazy"
          />
        ) : (
          <div class="employee-profile__photo-placeholder"></div>
        )}
      </div>
    <div class="employee-profile__content">
      
      
      <div class="employee-profile__info">
        {employee.role && (
          <div class="employee-profile__badge">
            {employee.role}
          </div>
        )}
        
        <h1 class="employee-profile__name">{employee.name}</h1>
        
        <div class="employee-profile__meta">
          <p class="employee-profile__position">{employee.position}</p>
          <p class="employee-profile__department">{employee.department}</p>
        </div>
        
        {employee.education && employee.education.length > 0 && (
          <div class="employee-profile__section">
            <h3 class="employee-profile__section-title">Образование:</h3>
            {employee.education.map((item, index) => (
              <apan class="employee-profile__section-text" key={index}>{item}</apan>
            ))}
          </div>
        )}
        
        {employee.experience && employee.experience.length > 0 && (
          <div class="employee-profile__section">
            {employee.experience.map((item, index) => (
              <p class="employee-profile__section-text" key={index}>{item}</p>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style lang="scss">
.employee-profile {
  margin-top: 48px;
  
  &__card {
    display: flex;
    background: #DBE7F7;
    border-radius: 24px;
    gap: 48px;
    position: relative;
    overflow: hidden;
    
    &::before {
      content: '';
      position: absolute;
      width: 518px;
      height: 518px;
      right: 84px;
      top: -235px;
      background: #1E6BD0;
      opacity: 0.06;
      border-radius: 50%;
    }
    
    &::after {
      content: '';
      position: absolute;
      width: 442px;
      height: 442px;
      left: -147px;
      bottom: -139px;
      background: #1E6BD0;
      opacity: 0.06;
      border-radius: 50%;
    }
  }
  
  &__content {
    display: flex;
    
    position: relative;
    z-index: 1;
    padding: 48px 48px 48px 0;
  }
  
  &__photo {
    flex-shrink: 0;
    width: 302px;
    min-height: 339px;
    border-radius: 0;
    overflow: hidden;
    
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
  
  &__photo-placeholder {
    width: 100%;
    height: 100%;
    background: #C4C4C4;
  }
  
  &__info {
    flex: 1;
  }
  
  &__badge {
    display: inline-block;
    background: white;
    border-radius: 18px;
    padding: 8px 16px;
    margin-bottom: 20px;
    
    font-size: 14px;
    font-weight: 600;
    color: #1E6BD0;
    font-family: 'Gilroy', sans-serif;
  }
  
  &__name {
    font-size: 24px;
    font-weight: bold;
    color: $color-text-primary;
    letter-spacing: -0.01em;
    margin-bottom: 12px;
    line-height: 1.3;
  }
  
  &__meta {
    margin-bottom: 32px;
  }
  
  &__position {
    font-size: 14px;
    color: $color-text-primary;
    opacity: 0.64;
    margin: 0 0 4px 0;
    line-height: 1.4;
  }
  
  &__department {
    font-size: 14px;
    color: $color-text-primary;
    opacity: 0.64;
    margin: 0;
    line-height: 1.4;
  }
  
  &__section {
    margin-bottom: 24px;
    
    &:last-child {
      margin-bottom: 0;
    }
  }
  
  &__section-title {
    display: inline;
    font-size: 14px;
    font-weight: 600;
    color: $color-text-primary;
    margin: 0 0 8px 0;
    line-height: 1.4;
  }
  
  &__section-text {
    font-size: 14px;
    color: $color-text-primary;
    margin: 0 0 8px 0;
    line-height: 1.5;
    
    &:last-child {
      margin-bottom: 0;
    }
  }
}

@media (max-width: $breakpoint-lg) {
  .employee-profile {
    &__content {
      gap: 32px;
    }
    
    &__photo {
      width: 250px;
      height: 375px;
    }
  }
}

@media (max-width: $breakpoint-md) {
  .employee-profile {
    margin-top: 60px;
    
    &__card {
      padding: 32px 24px;
      
      &::before,
      &::after {
        display: none;
      }
    }
    
    &__content {
      flex-direction: column;
      gap: 24px;
    }
    
    &__photo {
      width: 100%;
      max-width: 302px;
      height: 300px;
      margin: 0 auto;
    }
    
    &__name {
      font-size: 20px;
      text-align: center;
    }
    
    &__meta {
      text-align: center;
    }
    
    &__badge {
      display: block;
      text-align: center;
      margin-left: auto;
      margin-right: auto;
      max-width: fit-content;
    }
  }
}

@media (max-width: $breakpoint-sm) {
  .employee-profile {
    &__card {
      padding: 24px 16px;
    }
    
    &__photo {
      height: 250px;
    }
  }
}
</style>