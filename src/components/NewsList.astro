<style lang="scss" is:global>
.news-page {
  max-width: $container-size;
  margin: 0 auto;
  padding: 40px 0;

  &__title {
    
    font-size: 40px;
    font-weight: bold;
    color: $color-text-primary;
    text-align: center;
    margin-bottom: 48px;
    letter-spacing: -0.01em;
    
  }



  &__categorys {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    padding-bottom: 48px;
    
  }

  &__category {
    cursor: pointer;
    border-radius: 16px;
    padding: 8px 12px;
    font-size: 12px;
    display: inline-block;
    width: fit-content;
    border: 1px solid $color-border;
    text-decoration: none;
    color: $color-text-primary;
    &--active {
      background: $color-bg-light;
      border: 1px solid $color-bg-light;
      color: $color-primary;
    }
  }

  &__footer {
    display: flex;
    justify-content: center;
    margin-top: 40px;
  }
}

.news-container {
  display: grid;
  grid-template-columns: 1fr;
  gap: 12px;
  align-items: start;
}

.news-page-card {
  border-radius: 24px;
  overflow: hidden;
  position: relative;
  background: white;
  text-decoration: none;
  &__category {
    background: #E2E8F0;
    border-radius: 16px;
    padding: 8px 12px;
    
    font-size: 12px;
    color: $color-text-secondary;
    display: inline-block;
    width: fit-content;
    &--active {
      
    }
  }
  &--regular {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
    border: 1px solid rgba(15, 23, 42, 0.12);
    overflow: hidden;

    .news-page-card__image {
      overflow: hidden;
      min-height: 266px;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    .news-page-card__content {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 16px 16px;
      
    }

    

   

    .news-page-card__title {
      
      font-size: 18px;
      color: $color-text-primary;
      
      margin: 8px 0;
      line-height: $line-height-relaxed;
      /* Ограничение текста до 7 строк */
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .news-page-card__date {
      display: flex;
      align-items: center;
      gap: 8px;
      
      font-size: 14px;
      color: $color-text-secondary;
      
      svg {
        flex-shrink: 0;
      }
    }
  }
}

.news-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 12px;
}


