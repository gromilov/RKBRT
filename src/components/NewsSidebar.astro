---
// src/components/NewsSidebar.astro

interface SidebarItem {
  title: string;
  href: string;
  isActive?: boolean;
}

interface Props {
  items: SidebarItem[];
}

const { items } = Astro.props;
---

<div class="news-sidebar">
  {items.map((item) => (
    <a 
      href={item.href} 
      class={`news-sidebar__link ${item.isActive ? 'news-sidebar__link--active' : ''}`}
    >
      {item.title}
    </a>
  ))}
</div>

<style lang="scss" is:global>
.news-sidebar {
  display: flex;
  flex-direction: column;
  position: sticky;
  top: 0;
  max-width: 320px;
  width: 100%;
  height: 100vh;
  border-right: 1px solid $color-border;
  padding: 40px 0;
  gap: 24px;
  margin-right: 16px;
  
  &__link {
    display: flex;
    text-decoration: none;
    padding: 0 24px;
    color: $color-text-secondary;
    transition: color 0.2s ease;
    
    &:hover {
      color: $color-primary;
    }
    
    &--active {
      border-right: 1px solid $color-primary;
      color: $color-primary;
    }
  }
}

@media (max-width: $breakpoint-lg) {

  
  .news-sidebar {
    position: static;
    height: auto;
    max-width: none;
    margin-right: 0;
    overflow-x: auto;
    padding: 20px 0;
    border-right: none;
    border-top: 1px solid $color-border;
    gap: 8px;
    &__link {
      padding: 8px 16px;
      
      
      &--active {
        border-right: none;
        border-bottom: 1px solid $color-primary;
      }
    }
  }
}
</style>