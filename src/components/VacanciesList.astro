<style lang="scss" is:global>
.vacancies-page {
  max-width: $container-size;
  margin: 0 auto;
  padding: 40px 0;

  &__title {
    font-size: 48px;
    font-weight: bold;
    color: $color-text-primary;
    text-align: center;
    margin-bottom: 24px;
    letter-spacing: -0.01em;
    font-family: 'Gilroy', sans-serif;
  }

  &__subtitle {
    font-size: 18px;
    color: $color-text-primary;
    text-align: center;
    margin-bottom: 48px;
    font-family: 'Gilroy', sans-serif;
  }
}

.vacancies-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  padding: 0 12px;
}

.vacancy-card {
  background: white;
  border-radius: 24px;
  border: 1px solid rgba(15, 23, 42, 0.12);
  overflow: hidden;
 
  display: flex;
  flex-direction: column;

  &__header {
    padding: 32px 32px 0;
  }

  &__title {
    font-size: 24px;
    font-weight: bold;
    color: $color-text-primary;
    margin: 0;
    letter-spacing: -0.01em;
    font-family: 'Gilroy', sans-serif;
    line-height: 1.2;
  }

  &__content {
    padding: 16px 32px 32px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  &__description {
    
    font-size: 16px;
    color: $color-text-primary;
    margin: 0 0 16px 0;
    line-height: 1.5;
    font-family: 'Gilroy', sans-serif;
    & > span:first-child {
      font-weight: bold;
    }
  }

  &__contact {
    margin-bottom: 16px;
  }

  &__contact-title {
    font-size: 16px;
    color: $color-text-primary;
    margin: 0 0 8px 0;
    font-family: 'Gilroy', sans-serif;
    font-weight: normal;
  }

  &__contact-list {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    
    span {
      font-size: 16px;
      color: $color-text-primary;
      font-family: 'Gilroy', sans-serif;
    }
  }

  &__details {
    padding-top: 16px;
  }

  &__phone {
    font-size: 24px;
    font-weight: bold;
    color: $color-text-primary;
    margin-bottom: 8px;
    letter-spacing: -0.01em;
    font-family: 'Gilroy', sans-serif;
  }

  &__person {
    font-size: 16px;
    color: #475569;
    margin-bottom: 4px;
    font-family: 'Gilroy', sans-serif;
  }

  &__email {
    font-size: 24px;
    font-weight: bold;
    color: $color-text-primary;
    font-family: 'Gilroy', sans-serif;
    letter-spacing: -0.01em;
  }
}

/* Адаптивность */
@media (max-width: $breakpoint-xxl) {
  .vacancies-page {
    padding: 40px 24px;
  }
  
  .vacancies-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
}

@media (max-width: $breakpoint-md) {
  .vacancies-page {
    padding: 32px 16px;
  }
  
  .vacancies-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  .vacancies-page__title {
    font-size: 32px;
  }
  
  .vacancies-page__subtitle {
    font-size: 16px;
  }
  
  .vacancy-card {
    height: auto;
    min-height: 336px;
    
    &__header {
      padding: 24px 24px 0;
    }
    
    &__content {
      padding: 16px 24px 24px;
    }
    
    &__title {
      font-size: 20px;
    }
    
    &__phone,
    &__email {
      font-size: 20px;
    }
  }
}

@media (max-width: $breakpoint-sm) {
  .vacancies-page {
    padding: 24px 12px;
  }
  
  .vacancy-card {
    &__header {
      padding: 20px 20px 0;
    }
    
    &__content {
      padding: 12px 20px 20px;
    }
  }
}
</style>