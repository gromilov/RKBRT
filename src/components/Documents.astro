---
// src/components/Documents.astro
import PDFIcon from '../assets/PDF.svg';
import DOCSIcon from '../assets/DOCS.svg';
import JPGIcon from '../assets/JPG.svg';
import RTFIcon from '../assets/RTF.svg';
import DownloadIcon from '../assets/download.svg';

interface Document {
  title: string;
  format: string;
  size: string;
}

interface Props {
  title?: string;
  documents: Document[];
}

const { 
  title = "Прикрепленные документы", 
  documents = [] 
} = Astro.props;
---

<section class="documents-section">
  <h2 class="documents-section__title">{title}</h2>
  
  <div class="documents-grid">
    {documents.map((doc, index) => (
      <div class="document-card" key={index} >
        <div class="document-card__icon"
        style={
            `color: ${doc.format === 'PDF' ? '#E53E3E' :
                doc.format === 'DOCS' ? '#3182CE' :
                doc.format === 'JPG' ? '#D69E2E' :
                doc.format === 'RTF' ? '#38A169' :
                '#E53E3E'
            }`
        }
        
        >
            {doc.format === 'PDF' ? (<PDFIcon />) :
             doc.format === 'DOCS' ? (<DOCSIcon />) :
             doc.format === 'JPG' ? (<JPGIcon />) :
             doc.format === 'RTF' ? (<RTFIcon />) :
             (<PDFIcon />)
            }
        </div>
        <div class="document-card__info">
          <div class="document-card__title">{doc.title}</div>
          <div class="document-card__meta">
            <span class="document-card__format">{doc.format}</span>
            <span class="document-card__separator">•</span>
            <span class="document-card__size">{doc.size}</span>
          </div>
        </div>
        
        <button class="document-card__download">
          <span><DownloadIcon /></span>
        </button>
      </div>
    ))}
  </div>
</section>

<style lang="scss">
.documents-section {
  margin-top: 80px;
  
  &__title {
    font-size: 24px;
    font-weight: bold;
    color: $color-text-primary;
    letter-spacing: -0.01em;
    margin-bottom: 40px;
  }
}

.documents-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
  gap: 12px;
}

.document-card {
  display: flex;
  align-items: center;
  padding: 8px;
  border: 1px solid rgba(4, 5, 7, 0.12);
  border-radius: 16px;
  gap: 12px;
  
  &__icon {
    position: relative;
    display: flex;
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    border-radius: 8px;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    color: $color-primary;
    
    &::after {
      content: '';
      position: absolute;
      background: currentColor;
      width: 48px;
      height: 48px;
      left: 0; right: 0;
      bottom: 0;
      top: 0;
      opacity: 0.1;
    }
  }
  
  &__info {
    flex: 1;
  }
  
  &__title {
    font-size: 14px;
    font-weight: 600;
    color: $color-text-primary;
    margin-bottom: 4px;
    /* Ограничение текста до 1 строк */
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  &__meta {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: #475569;
  }
  
  &__separator {
    font-size: 8px;
  }
  
  &__download {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: none;
    background: transparent;
    cursor: pointer;
    color: #475569;
    
    &:hover {
      color: $color-primary;
    }
  }
}

@media (max-width: $breakpoint-md) {
  .documents-grid {
    grid-template-columns: 1fr;
  }
  
  .documents-section {
    margin-top: 60px;
    
    &__title {
      font-size: 24px;
    }
  }
}
</style>