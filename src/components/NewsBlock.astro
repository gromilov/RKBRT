---
// Данные новостей
const newsData = {
  featured: {
    image: "/images/sevices.png",
    alt: "Избирательный участок для пациентов заработал в РКБ",
    category: "Новости минздрава РТ",
    title: "Избирательный участок для пациентов заработал в РКБ",
    date: "14.09.2025"
  },
  regular: [
    {
      image: "/images/sevices.png",
      alt: "РКБ Татарстана наладил работу нового центра оказания помощи пациентам",
      category: "Новости РКБ",
      title: "РКБ Татарстана наладил работу нового центра оказания помощи пациентам с сердечно-сосудистыми",
      date: "14.09.2025"
    },
    {
      image: "/images/sevices.png",
      alt: "На 70-м году жизни скончался врач-гематолог",
      category: "Новости РКБ",
      title: "На 70-м году жизни скончался врач-гематолог Арыслан Радикович Ахмадеев",
      date: "14.09.2025"
    },
    {
      image: "/images/sevices.png",
      alt: "Матч по мини-футболу провели пациенты после трансплантации",
      category: "Новости РКБ",
      title: "Матч по мини-футболу провели пациенты после трансплантации с врачами РКБ Татарстана",
      date: "14.09.2025"
    }
  ]
};

// Иконка календаря (можно вынести в отдельный компонент)
const CalendarIcon = `
<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
  <path d="M8 2V6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  <path d="M16 2V6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  <path d="M19 4H5C3.89543 4 3 4.89543 3 6V20C3 21.1046 3.89543 22 5 22H19C20.1046 22 21 21.1046 21 20V6C21 4.89543 20.1046 4 19 4Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  <path d="M3 10H21" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
</svg>
`;
---

<div class="news-section">
  <!-- Заголовок раздела -->
  <h2 class="news-section__title">Последние новости</h2>

  <div class="news-container">
    <!-- Главная новость (слева) -->
    <a href="#" class="news-card news-card--featured">
      <div class="news-card__image">
        <img src={newsData.featured.image} alt={newsData.featured.alt} />
      </div>
      <div class="news-card__gradient"></div>
      <div class="news-card__content">
        <span class="news-card__category">{newsData.featured.category}</span>
        <h3 class="news-card__title">{newsData.featured.title}</h3>
        <div class="news-card__date" set:html={CalendarIcon + newsData.featured.date}></div>
      </div>
    </a>

    <!-- Блок с обычными новостями (справа) -->
    <div class="news-list">
      {
        newsData.regular.map((news, index) => (
          <a href="#" class="news-card news-card--regular" key={index}>
            <div class="news-card__image">
              <img src={news.image} alt={news.alt} />
            </div>
            <div class="news-card__content">
              <span class="news-card__category">{news.category}</span>
              <h4 class="news-card__title">{news.title}</h4>
              <div class="news-card__date" set:html={CalendarIcon + news.date}></div>
            </div>
          </a>
        ))
      }
    </div>
  </div>

  <!-- Кнопка "Смотреть все новости" -->
  <div class="news-section__footer">
    <button class="news-button">
      Смотреть все новости
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M5 12H19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M12 5L19 12L12 19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>
</div>

<style lang="scss" is:global>
.news-section {
  max-width: 1416px;
  margin: 0 auto;
  padding: 40px 0;

  &__title {
    font-family: 'Gilroy', sans-serif;
    font-size: 40px;
    font-weight: bold;
    color: #0F172A;
    text-align: center;
    margin-bottom: 48px;
    letter-spacing: -0.01em;
  }

  &__footer {
    display: flex;
    justify-content: center;
    margin-top: 40px;
  }
}

.news-container {
  display: grid;
  grid-template-columns: 702px 1fr;
  gap: 12px;
  align-items: start;
}

.news-card {
  border-radius: 24px;
  overflow: hidden;
  position: relative;
  background: white;
  text-decoration: none;

  &--featured {
    height: 576px;
    
    .news-card__image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    .news-card__gradient {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 50%;
      background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.64) 100%);
    }

    .news-card__content {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 32px;
      color: white;
      z-index: 2;
    }

    .news-card__category {
      background: rgba(255, 255, 255, 0.16);
      backdrop-filter: blur(16px);
      border-radius: 18px;
      padding: 8px 16px;
      font-family: 'Gilroy', sans-serif;
      font-size: 12px;
      display: inline-block;
      margin-bottom: 24px;
    }

    .news-card__title {
      font-family: 'Gilroy', sans-serif;
      font-size: 32px;
      font-weight: bold;
      line-height: 1.2;
      margin-bottom: 20px;
    }

    .news-card__date {
      display: flex;
      align-items: center;
      gap: 8px;
      font-family: 'Gilroy', sans-serif;
      font-size: 14px;
      color: $color-text-secondary;
      
      svg {
        flex-shrink: 0;
      }
    }
  }

  &--regular {
    display: grid;
    grid-template-columns: 206px 1fr;
    gap: 16px;
    padding: 16px;
    border: 1px solid rgba(15, 23, 42, 0.12);
    height: 183px;

    .news-card__image {
      border-radius: 8px;
      overflow: hidden;
      
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    .news-card__content {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 6px 0;
    }

    .news-card__category {
      background: #E2E8F0;
      border-radius: 16px;
      padding: 8px 12px;
      font-family: 'Gilroy', sans-serif;
      font-size: 12px;
      color: $color-text-secondary;
      display: inline-block;
      width: fit-content;
    }

    .news-card__title {
      font-family: 'Gilroy', sans-serif;
      font-size: 18px;
      color: #0F172A;
      line-height: 1.3;
      margin: 8px 0;
    }

    .news-card__date {
      display: flex;
      align-items: center;
      gap: 8px;
      font-family: 'Gilroy', sans-serif;
      font-size: 14px;
      color: $color-text-secondary;
      
      svg {
        flex-shrink: 0;
      }
    }
  }
}

.news-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.news-button {
  display: flex;
  align-items: center;
  gap: 8px;
  background: white;
  border: 1px solid rgba(15, 23, 42, 0.12);
  border-radius: 28px;
  padding: 16px 32px;
  font-family: 'Gilroy', sans-serif;
  font-size: 16px;
  color: #010101;
  cursor: pointer;
  transition: all 0.3s ease;

  &:hover {
    background: #f8fafc;
    
  }
}

/* Адаптивность */
@media (max-width: 1440px) {
  .news-section {
    padding: 40px 24px;
  }
  
  .news-container {
    grid-template-columns: 1fr;
    gap: 24px;
  }

  .news-card--featured {
    height: 400px;
  }
}

@media (max-width: 768px) {
  .news-section__title {
    font-size: 32px;
    margin-bottom: 32px;
  }

  .news-card--featured {
    height: 300px;

    .news-card__content {
      padding: 24px;
    }

    .news-card__title {
      font-size: 24px;
    }
  }

  .news-card--regular {
    grid-template-columns: 120px 1fr;
    height: auto;
    min-height: 140px;
    gap: 12px;

    .news-card__title {
      font-size: 16px;
    }
  }
}

@media (max-width: 480px) {
  .news-section {
    padding: 32px 16px;
  }

  .news-card--featured {
    height: 250px;

    .news-card__content {
      padding: 20px;
    }

    .news-card__title {
      font-size: 20px;
    }
  }

  .news-card--regular {
    grid-template-columns: 1fr;
    height: auto;

    .news-card__image {
      height: 120px;
    }
  }
}
</style>