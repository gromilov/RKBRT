---
const {
  label,
  name,
  value = '',
  type = 'text',
  required = false,
  placeholder = ''
} = Astro.props;
---

<div class="input-field">
  <label class="input-label" for={name}>
    {label}
  </label>
  
  {type === 'textarea' ? (
    <textarea
      id={name}
      name={name}
      class="input input--textarea"
      placeholder={placeholder}
      {required}
    >{value}</textarea>
  ) : (
    <input
      id={name}
      name={name}
      type={type}
      value={value}
      class="input"
      placeholder={placeholder}
      {required}
    />
  )}
  
  <div class="input-underline"></div>
</div>

<style lang="scss" is:global>
.input-field {
  display: flex;
  flex-direction: column;
  gap: 8px;
  position: relative;
}

.input-label {
  
  font-size: 14px;
  color: currentColor;
  opacity: 0.64;
  line-height: $line-height-normal;
}

.input {
  
  font-size: 16px;
  color: currentColor;
  background: transparent;
  border: none;
  padding: 8px 0;
  line-height: $line-height-normal;
  
  &::placeholder {
    color: currentColor;
    opacity: 0.4;
  }
  
  &:focus {
    outline: none;
    
    & ~ .input-underline {
      opacity: 1;
    }
  }
  
  &--textarea {
    resize: vertical;
    min-height: 80px;
    line-height: $line-height-relaxed;
  }
}

.input-underline {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background: currentColor;
  opacity: 0.16;
  transition: opacity $transition-fast;
  
  .input:focus ~ & {
    opacity: 1;
  }
}
</style>