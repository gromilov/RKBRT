---
// src/components/ProfileReviews.astro

import StarIcon from '../assets/star.svg';
import Button from '../components/ui/Button.astro';
import Modal from '../components/ui/Modal.astro';
import InputField from '../components/ui/InputField.astro';

interface Review {
  id: string;
  author: string;
  text: string;
  rating: number;
  date?: string;
  doctor?: string;
}

interface Props {
  reviews: Review[];
}

const { reviews = [] } = Astro.props;
---

<section class="profile-reviews">
    <h2 class="profile-reviews__title">
         Отзывы
         <div class="">
            <Button id="ButtonReviewFormModal">Оставить отзыв</Button>
         </div>
    </h2>
  {reviews.map((review) => (
    <article class="review-item" key={review.id}>
      <div class="review-item__header">
        <h3 class="review-item__author">{review.author}</h3>
        
      </div>
      <div class="review-item__rating">
          {Array.from({ length: 5 }).map((_, index) => (
            <StarIcon 
              class={`review-item__star ${index < review.rating ? 'review-item__star--active' : ''}`}
            />
          ))}
        </div>
      
      <div class="review-item__content">
        {review.doctor && (
          <strong class="review-item__doctor">{review.doctor}</strong>
        )}
        <p class="review-item__text">{review.text}</p>
      </div>
    </article>
  ))}
  
  {reviews.length === 0 && (
    <div class="profile-reviews__empty">
      <p>Пока нет отзывов</p>
    </div>
  )}
</section>

<!-- Модальное окно для отзывов -->
<Modal id="reviewFormModal">
  <form class="contact-form">
      <InputField 
        label="ФИО"
        name="name"
        value="Дмитрий"
        required
      />
      
      <InputField 
        label="Номер телефона"
        name="phone"
        value="8 800 555 35 35"
        type="tel"
        required
      />
      
      <InputField 
        label="Сообщение (необязательно)"
        name="message"
        type="textarea"
        value="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
      />

      <!-- Чекбокс согласия -->
      <div class="checkbox-group">
        <input type="checkbox" id="consent" name="consent" required class="checkbox-input" />
        <label for="consent" class="checkbox-label">
          Я даю согласие на обработку моих персональных данных
        </label>
      </div>

      <!-- Кнопка отправки -->
      <Button>
        Оставить отзыв
      </Button>
    </form>
</Modal>


<script>
$(document).ready(function() {
  $(document).on('click', '#ButtonReviewFormModal', () => {
    openModal('reviewFormModal');
  });
});
</script>



<style lang="scss" is:global>
.profile-reviews {
  display: flex;
  flex-direction: column;
  gap: 32px;
  margin-top: 40px;

  &__title {
    display: flex;
    justify-content: space-between;
    gap: 24px
  }
}

.review-item {
  padding-bottom: 32px;
  &:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }


  
  &__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16px;
  }
  
  &__author {
    font-size: 18px;
    font-weight: 600;
    color: $color-text-primary;
    margin: 0;
    line-height: 1.4;
  }
  
  &__rating {
    display: flex;
    gap: 2px;
    flex-shrink: 0;
    margin-bottom: 12px;
  }
  
  &__star {
    width: 20px;
    height: 20px;
    color: #E5E7EB;
    
    &--active {
      color: #FACC15;
    }
  }
  
  &__content {
    color: $color-text-primary;
  }
  
  &__doctor {
    font-weight: 600;
    display: inline;
  }
  
  &__text {
    font-size: 18px;
    line-height: 1.6;
    margin: 0;
    display: inline;
    
    &:not(:has(+ .review-item__doctor)) {
      display: block;
    }
  }
}

.profile-reviews__empty {
  text-align: center;
  padding: 60px 20px;
  color: #475569;
  font-size: 16px;
}

@media (max-width: $breakpoint-md) {
  .profile-reviews {
    gap: 24px;
    margin-top: 32px;
  }
  
  .review-item {
    padding-bottom: 24px;
    
    &__header {
      flex-direction: column;
      gap: 12px;
      align-items: flex-start;
    }
    
    &__author {
      font-size: 16px;
    }
    
    &__text {
      font-size: 16px;
    }
  }
}

@media (max-width: $breakpoint-sm) {
  .profile-reviews {
    gap: 20px;
  }
  
  .review-item {
    padding-bottom: 20px;
    
    &__text {
      font-size: 14px;
    }
  }
  
  .profile-reviews__empty {
    padding: 40px 20px;
  }
}
</style>